	<import resource="classpath:META-INF/spring/pay-db.xml" />
	<import resource="classpath:META-INF/spring/pay-cache.xml" />
	<import resource="classpath:META-INF/spring/pay-service.xml" />
	<import resource="classpath:META-INF/spring/pay-dubbo.xml" />
	<import resource="classpath:META-INF/spring/pay-rocketmq.xml" />
	<import resource="classpath:META-INF/spring/pay-event.xml" />
	<!-- disconf -->
	<import resource="classpath:META-INF/spring/pay-disconf.xml" />
	<!-- 新路径TCC客户端配置 -->
	<import resource="classpath:META-INF/spring/payment-dbts.xml" />
	<!-- 灰度拦截器 -->
	<import resource="classpath:META-INF/spring/payment-gray.xml" />
	<!-- 统一支付服务 -->
	<import resource="classpath:META-INF/spring/payment-service.xml" />
	<!-- 统一支付后台线程 -->
	<import resource="classpath:META-INF/spring/payment-daemon.xml" />
	<!-- 统一支付消息 -->
	<import resource="classpath:META-INF/spring/payment-mq.xml" />
	<!-- 统一支付处理流程 -->
	<import resource="classpath:META-INF/spring/payment-flow.xml" />

    <!-- 可靠消息服务-->
    <import resource="classpath:META-INF/spring/pay-consistent-message.xml" />
	<!-- 分表相关-->
	<import resource="classpath:META-INF/spring/pay-sharding.xml" />


	<!-- 分布式任务调度-->
	<import resource="classpath:META-INF/spring/pay-xxl-job.xml"  />

	<bean id="enginScheduler"
		class="org.springframework.scheduling.quartz.SchedulerFactoryBean"
		autowire="no" lazy-init="false">
		<property name="triggers">
			<list>
				<ref bean="paymentDaemonTrigger" />
			</list>
		</property>
		<property name="startupDelay" value="30" />
		<property name="quartzProperties">
			<props>
				<prop key="org.quartz.threadPool.class">org.quartz.simpl.SimpleThreadPool</prop>
				<prop key="org.quartz.threadPool.threadCount">3</prop>
				<prop key="org.quartz.threadPool.threadPriority">5</prop>
				<prop key="org.quartz.jobStore.class">org.quartz.simpl.RAMJobStore</prop>
				<prop key="org.quartz.scheduler.instanceName">enginScheduler</prop>
				<prop key="org.quartz.scheduler.instanceId">AUTO</prop>
				<prop key="org.quartz.plugin.shutdownhook.class">org.quartz.plugins.management.ShutdownHookPlugin
				</prop>
				<prop key="org.quartz.plugin.shutdownhook.cleanShutdown">true</prop>
			</props>
		</property>
	</bean>
	
</beans>