<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	   http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true" default-autowire="byName">

    <bean id="investorDataSource" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${mazda.mysql.driver}"/>
        <property name="url" value="${mazda.investor.mysql.url}"/>
        <property name="username" value="${mazda.investor.mysql.username}"/>
        <property name="password" value="${mazda.investor.mysql.password}"/>
        <property name="defaultAutoCommit" value="false"/>
    </bean>

    <bean id="investorTransactionManager"
          class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
        <property name="dataSource" ref="investorDataSource"/>
    </bean>
    <!--事务-->
    <tx:annotation-driven transaction-manager="investorTransactionManager"/>

    <!-- 创建SqlSessionFactory，同时指定数据源 -->
    <bean id="investorSqlSessionFactory" class="org.mybatis.spring.SqlSessionFactoryBean">
        <property name="dataSource" ref="investorDataSource"/>
        <property name="mapperLocations" value="classpath*:/mybatis/mapper/*.xml"/>
        <property name="typeAliasesPackage" value="com.maihaoche.mazda.dal.model.***"/>
    </bean>
    <!-- Mapper接口所在包名，Spring会自动查找其下的Mapper -->
    <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer">
        <property name="basePackage" value="com.maihaoche.mazda.dal.mapper"/>
        <property name="sqlSessionFactoryBeanName" value="investorSqlSessionFactory"/>
        <!--<property name="annotationClass" value="org.springframework.stereotype.Repository"/>-->
    </bean>
</beans>
